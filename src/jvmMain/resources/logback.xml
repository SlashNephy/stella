<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%highlight(%-5level)] [%d{HH:mm:ss.SSS}] [%green(%logger) / %thread] %m%n</pattern>
        </encoder>
    </appender>

    <logger name="Stella" level="TRACE" />
    <logger name="org.mongodb.driver" level="WARN" />

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
